@model SolidJokes.Core.Models.JokeApplication

@*Errors or messages after form has been posted*@
<div class="alert-danger">
    @Html.DisplayFor(x => x.Message)
</div>

<div class="form-group">
    @Html.LabelFor(model => model.JokeType, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @*@Html.EnumDropDownListFor(model => model.StoryType, htmlAttributes: new { @class = "form-control" })*@
        @Html.EnumDropDownListFor(model => model.JokeType, new { })
        @Html.ValidationMessageFor(model => model.JokeType)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @*Using specific helpers*@

        @*@Html.EditorFor(model => model.Title)*@
        @Html.TextBoxFor(model => model.Title, new { style = "width: 500px;" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextAreaFor(model => model.Content, 10, 300, null)
        @Html.ValidationMessageFor(model => model.Content)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Rating, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Rating, new { style = "width: 500px;" })
        @Html.ValidationMessageFor(model => model.Rating)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.VideoURL, new { @class = "control-label col-md-2" }) eg http://www.youtube.com/embed/y0TxfwB3BWQ?rel=0
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.VideoURL, new { style = "width: 500px;" })
        @Html.ValidationMessageFor(model => model.VideoURL)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ImageURL, new { @class = "control-label col-md-2" }) eg http://newsimg.bbc.co.uk/media/images/40190000/jpg/_40190457_milligangrave202250.jpg
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.ImageURL, new { style = "width: 500px;" })
        @Html.ValidationMessageFor(model => model.ImageURL)
    </div>
</div>
