@using System.Reflection
@using SolidJokes.Web.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dave's Jokes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dave's Jokes", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>

                    @if (User.Identity.Name == "davemateer@gmail.com")
                    {
                        <li>@Html.ActionLink("Jokes", "Index", "Joke")</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <br />
    <div id="footer">
        <div class="container text-center">
            <p class="text-muted credit">&copy; @DateTime.Now.Year Daves Top Jokes (North Europe) Rev: @Assembly.GetExecutingAssembly().GetLinkerTime() (UK Time)</p>
            <p class="text-muted credit">Other projects of mine:
                <a href="http://www.davestopmusic.com">davestopmusic.com</a>
                <a href="http://dmovies.azurewebsites.net">dmovies.azurewebsites.net</a>
                <a href="http://refactoring.azurewebsites.net">refactoring.azurewebsites.net</a>
            </p>
            <p class="text-muted credit">
                <img src="~/Content/Images/Twitter_logo_blue.png" width="20" height="20" /><a href="https://twitter.com/dave_mateer"> https://twitter.com/dave_mateer</a>
                <img src="~/Content/Images/Octocat.png" width="20" height="20" /> <a href="https://github.com/djhmateer"> https://github.com/djhmateer</a>
                <img src="~/Content/Images/mail-icon-128.png" width="20" height="20" /> davemateer@gmail.com
            </p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*Google Analytics*@
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-51227742-1', 'davesjokes.co.uk');
        ga('send', 'pageview');

    </script>
</body>
</html>
